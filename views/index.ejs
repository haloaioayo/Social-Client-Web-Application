<div class="collapse" id="addperson">
    <div class="card card-body">
    <h3>Add New Person</h3>
    <form method="POST" action="/person/add">
        <input type = "text" name="name" placeholder="Name" style="border-radius: 5px; font-style: oblique">
        <input type="submit" value="Submit" class="btn btn-outline-dark btn-sm" style="font-style: oblique; margin-bottom:4px">
    </form>
    </div>
</div>

<div class="collapse" id="addlocation">
        <div class="card card-body">
                <h3>Add New Location</h3>
                <form method="POST" action="/location/add">
                    <input type = "text" name="city" placeholder="City" style="border-radius: 5px; font-style: oblique">
                    <br>
                    <input type = "text" name="state" placeholder="State" style="border-radius: 5px; font-style: oblique">
                    <input type="submit" value="Submit" class="btn btn-outline-dark btn-sm" style="font-style: oblique; margin-bottom:4px">
                </form>
        </div>
</div>

<div class="collapse" id="connectfriends">
        <div class="card card-body">
                <h3>Connect Friends</h3>
                <form method="POST" action="/friends/connect">
                    <input type = "text" name="name1" placeholder="Name" style="border-radius: 5px; font-style: oblique">
                    <input type = "text" name="name2" placeholder="Name" style="border-radius: 5px; font-style: oblique">
                    <input type="submit" value="Submit" class="btn btn-outline-dark btn-sm" style="font-style: oblique; margin-bottom:4px">
                </form>
        </div>
</div>


<div class="collapse" id="addbirthplace">
        <div class="card card-body">
                <h3>Add Birthplace</h3>
                <form method="POST" action="/person/born/add">
                    <input type = "text" name="name" placeholder="Name" style="border-radius: 5px; font-style: oblique">
                    <br>
                    <input type = "text" name="city" placeholder="City" style="border-radius: 5px; font-style: oblique">
                    <br>
                    <input type = "text" name="state" placeholder="State" style="border-radius: 5px; font-style: oblique">
                    <br>
                    <input type = "text" name="year" placeholder="Year" style="border-radius: 5px; font-style: oblique">
                    <input type="submit" value="Submit" class="btn btn-outline-dark btn-sm" style="font-style: oblique; margin-bottom:4px">
                </form>
        </div>
</div>

<div class="collapse" id="addinterest">
        <div class="card card-body">
        <h3>Add New Interest</h3>
        <form method="POST" action="/person/interest/add">
        <input type = "text" name="interest" placeholder="Interest" style="border-radius: 5px; font-style: oblique">
        <input type="submit" value="Submit" class="btn btn-outline-dark btn-sm" style="font-style: oblique; margin-bottom:4px">
        </form>
        </div>
    </div>


<h3>People</h3>
<div class="row">
<% persons.forEach(function(person){ %>
    <div class="col-md-2">
            <div class="card card-body"><i class="fa fa-address-card"></i><a href="/person/<%= person.id %>"><%= person.name %></a></div>
    </div>
<% }) %>
</div>

<h3>Locations</h3>
<div class="row">
<% locations.forEach(function(location){ %>
    <div class="col-md-2">
            <div class="card card-body"><i class="fa fa-map-pin"></i><%= location.city %>, <%= location.state %></div>
    </div>
<% }) %>
</div>

<h3>Interests</h3>
<div class="row">
<% interests.forEach(function(interest){ %>
    <div class="col-md-2">
            <div class="card card-body"><i class="fa fa-heart-o"></i><%= interest.name %></div>
    </div>
<% }) %>
</div>

